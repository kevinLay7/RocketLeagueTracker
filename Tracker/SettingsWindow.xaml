<Window x:Class="Tracker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tracker"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:cachedImage="clr-namespace:CachedImage;assembly=CachedImage"
        mc:Ignorable="d"
        Title="Settings for RL Tracker" Height="450" Width="800">
    <Grid>
        <Button x:Name="DataDeleteButton" Content="Delete all saved profile's data" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="DataDeleteButton_Click"/>
        <TextBlock Foreground="#FFD4D4D4" Text="Rocket League Profile Tracker" FontWeight="Bold" Height="16" HorizontalAlignment="Center" VerticalAlignment="Top" Width="218"  TextAlignment="Center" Margin="0,408,0,0" />

    </Grid>
